<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_icon_IDL"
        style="@style/drawer_menu_item"
        android:layout_alignParentLeft="true"

        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_IDL"
        android:layout_toRightOf="@+id/tv_icon_IDL"
        android:layout_centerVertical="true" />

    <com.thinkmobiles.mysmallcommunity.ui.custom_views.CustomBadge
        android:id="@+id/cb_badge_IDL"
        style="@style/drawer_menu_item"
        android:layout_alignParentRight="true"
        app:badgeColor="@color/color_green_600"
        app:countColor="@android:color/white"
        app:countSize="@dimen/txt_size_12"
        app:radiusRound="@dimen/radius_round"
        android:layout_centerVertical="true" />
</RelativeLayout>