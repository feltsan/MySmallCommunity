<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/ivUserPhoto_ILPH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/terrance_photo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#111111"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tvName_ILPH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Michael Hemmanoel"
                    android:textSize="22dp"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:layout_marginLeft="24dp"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Living in: "
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/tvEmirates_ILPH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Community name"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvGallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gallery"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interest:"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"/>

            <GridLayout
                android:id="@+id/gridLayout_ILPH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="4"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnNewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send a message"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/color_green_accent_700"/>

    </LinearLayout>

</LinearLayout>